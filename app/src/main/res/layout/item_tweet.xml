<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivProfileImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:minWidth="75dp"
        android:minHeight="75dp"
        android:maxWidth="75dp"
        android:maxHeight="75dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill"
        android:id="@+id/txtUserName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProfileImg"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#ff550416"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tweets From..."
        android:id="@+id/txtBody"
        android:layout_below="@+id/txtUserName"
        android:layout_toRightOf="@+id/ivProfileImg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|left"
        android:textAlignment="gravity"
        android:textSize="20sp"
        android:textColor="#ff1b1350"
        android:layout_marginLeft="10dp"
        android:autoLink="all"
        android:linksClickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10m"
        android:id="@+id/txtTime"
        android:layout_above="@+id/txtBody"
        android:layout_alignRight="@+id/txtBody"
        android:layout_alignEnd="@+id/txtBody"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#ff4d4d4d" />
</RelativeLayout>